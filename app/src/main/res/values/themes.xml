<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Electronica" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/teal</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">300dp</item>
        <item name="android:windowMinWidthMinor">200dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxStrokeColor">@color/teal</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="startIconTint">@color/black</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_bkg</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="SearchView" parent="">
        <item name="android:editTextColor">@color/txt_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="tint">@android:color/black</item>
    </style>

    <style name="Theme.Electronica" parent="Base.Theme.Electronica" />
</resources>